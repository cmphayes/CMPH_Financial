@model CMPH_Financial.Models.ApplicationUser
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@using CMPH_Financial.Helpers;

@{
    ViewBag.Title = "ProfileView";
}

<style>
    img {
        width: 50%;
    }
</style>

<section id="main-content">
    <section class="wrapper site-min-height">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <div class="profile-pic">
                        <p><img src="@Url.Content(@UserHelper.GetProfileImagePath(Model.Id))" class="img-circle"></p>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <p>@UserHelper.GetName(Model.Id)</p>
                </div>
            </div>
            <div class="col-lg-12 mt">
                <div class="row content-panel">
                    <div class="panel-heading">
                        <ul class="nav nav-tabs nav-justified">
                            <li class="active">
                                <a data-toggle="tab" href="#household">Household Info</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#other">Other</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#edit">Edit Profile</a>
                            </li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="household" class="tab-pane active">
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.ActionLink("Go To Household", "Details", "Households", new { id = Model.HouseholdId }, new { @class = "btn btn-theme" })
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </div>
                            <div id="other" class="tab-pane">
                                <div class="row">
                                    <div class="col-md-6">
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </div>
                            <div id="edit" class="tab-pane">
                                @Html.Partial("EditProfile", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
